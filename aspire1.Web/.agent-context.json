{
  "serviceName": "aspire1.Web",
  "agent": "web-agent",
  "purpose": "Blazor Server frontend for weather forecast application",
  "technology": "Blazor Server, SignalR, ASP.NET Core",
  "archDocument": "ARCHITECTURE.md",
  "readOnlyDependencies": [
    "../aspire1.ServiceDefaults/",
    "../aspire1.ApiService/ARCHITECTURE.md",
    "../ARCHITECTURE.md"
  ],
  "allowedMutations": [
    "Components/",
    "wwwroot/",
    "Program.cs",
    "appsettings.json",
    "appsettings.Development.json",
    "*.cs (components and handlers)"
  ],
  "forbiddenMutations": [
    "WeatherApiClient.cs - Use shared HTTP client pattern from ServiceDefaults"
  ],
  "integrationPoints": [
    "WeatherApiClient -> aspire1.ApiService /weatherforecast endpoint",
    "SignalR <- aspire1.ApiService for real-time updates",
    "Health checks via aspire1.ServiceDefaults patterns"
  ],
  "buildCommands": {
    "build": "dotnet build aspire1.Web.csproj",
    "test": "cd ../aspire1.Web.Tests && dotnet test",
    "format": "dotnet format",
    "watch": "dotnet watch run"
  },
  "testScope": [
    "../aspire1.Web.Tests/"
  ],
  "constraints": {
    "noHardcodedUrls": true,
    "useServiceDiscovery": true,
    "requireHealthChecks": true,
    "followOpenTelemetryPatterns": true
  }
}
