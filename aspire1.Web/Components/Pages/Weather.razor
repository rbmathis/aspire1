@page "/weather"
@attribute [StreamRendering(true)]
@attribute [OutputCache(Duration = 5)]
@using Microsoft.FeatureManagement

@inject WeatherApiClient WeatherApi
@inject IFeatureManager FeatureManager

<PageTitle>Weather</PageTitle>

<h1>Weather</h1>

@if (!featureEnabled)
{
    <div class="alert alert-warning">
        <h4>⚠️ Feature Disabled</h4>
        <p>The weather forecast feature is currently disabled. Please contact your administrator.</p>
    </div>
}
else if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="weather-grid">
        @foreach (var forecast in forecasts)
        {
            <div class="weather-card">
                <div class="weather-date">@forecast.Date.ToShortDateString()</div>
                <div class="weather-temps">
                    <span class="temp-c">@forecast.TemperatureC°C</span>
                    <span class="temp-f">(@forecast.TemperatureF°F)</span>
                </div>
                <div class="weather-humidity">💧 @forecast.Humidity%</div>
                <div class="weather-summary">@forecast.Summary</div>
            </div>
        }
    </div>
}

<style>
    .weather-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
        padding: 1rem 0;
    }

    .weather-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        padding: 1.5rem;
        color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

    .weather-card:hover {
        transform: translateY(-4px);
    }

    .weather-date {
        font-size: 0.9rem;
        opacity: 0.9;
        margin-bottom: 0.5rem;
    }

    .weather-temps {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .temp-f {
        font-size: 1rem;
        opacity: 0.8;
    }

    .weather-humidity {
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .weather-summary {
        font-size: 1.1rem;
        font-style: italic;
    }
</style>

@code {
    private WeatherForecast[]? forecasts;
    private bool featureEnabled = true;

    protected override async Task OnInitializedAsync()
    {
        // Check if feature is enabled
        featureEnabled = await FeatureManager.IsEnabledAsync("WeatherForecast");

        if (featureEnabled)
        {
            forecasts = await WeatherApi.GetWeatherAsync();
        }
    }
}