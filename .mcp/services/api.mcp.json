{
  "name": "aspire-api-service",
  "description": "MCP context for aspire1.ApiService API service",
  "version": "1.0.0",
  "tools": [
    {
      "name": "get-service-architecture",
      "description": "Returns architecture documentation for aspire1.ApiService",
      "inputSchema": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string",
            "enum": ["overview", "integration-points", "endpoints", "anti-patterns"],
            "default": "overview"
          }
        }
      }
    },
    {
      "name": "get-dependencies",
      "description": "Returns service dependencies including WeatherService integration",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "validate-changes",
      "description": "Validates proposed changes against architecture constraints",
      "inputSchema": {
        "type": "object",
        "properties": {
          "filePath": {
            "type": "string",
            "description": "File being modified"
          },
          "changeType": {
            "type": "string",
            "enum": ["endpoint", "dependency", "health-check", "resilience"],
            "description": "Type of change being made"
          }
        },
        "required": ["filePath", "changeType"]
      }
    }
  ]
}
