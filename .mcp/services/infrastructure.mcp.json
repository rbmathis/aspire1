{
  "name": "aspire-infrastructure",
  "description": "MCP context for Azure infrastructure (Bicep templates and deployment)",
  "version": "1.0.0",
  "tools": [
    {
      "name": "get-infrastructure-architecture",
      "description": "Returns infrastructure documentation and Azure resource configuration",
      "inputSchema": {
        "type": "object",
        "properties": {
          "resource": {
            "type": "string",
            "enum": ["all", "container-apps", "app-insights", "redis", "app-config", "alerts"],
            "default": "all"
          }
        }
      }
    },
    {
      "name": "validate-bicep",
      "description": "Validates Bicep template changes",
      "inputSchema": {
        "type": "object",
        "properties": {
          "templatePath": {
            "type": "string",
            "description": "Path to bicep template"
          }
        },
        "required": ["templatePath"]
      }
    },
    {
      "name": "check-deployment-impact",
      "description": "Analyzes impact of infrastructure changes on services",
      "inputSchema": {
        "type": "object",
        "properties": {
          "changeType": {
            "type": "string",
            "enum": ["networking", "security", "environment-var", "resource-sizing"],
            "description": "Type of infrastructure change"
          }
        },
        "required": ["changeType"]
      }
    }
  ]
}
