{
  "name": "aspire-weather-service",
  "description": "MCP context for aspire1.WeatherService microservice",
  "version": "1.0.0",
  "tools": [
    {
      "name": "get-service-architecture",
      "description": "Returns architecture documentation for aspire1.WeatherService",
      "inputSchema": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string",
            "enum": ["overview", "integration-points", "endpoints", "anti-patterns"],
            "default": "overview"
          }
        }
      }
    },
    {
      "name": "get-dependencies",
      "description": "Returns service dependencies - NOTE: This service should have minimal dependencies",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "validate-changes",
      "description": "Validates that service doesn't add unwanted dependencies on other services",
      "inputSchema": {
        "type": "object",
        "properties": {
          "filePath": {
            "type": "string",
            "description": "File being modified"
          },
          "changeType": {
            "type": "string",
            "enum": ["endpoint", "external-api", "health-check", "data-model"],
            "description": "Type of change being made"
          }
        },
        "required": ["filePath", "changeType"]
      }
    }
  ]
}
