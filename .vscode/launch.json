{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run AppHost (Aspire Dashboard)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-apphost",
      "program": "${workspaceFolder}/aspire1.AppHost/bin/Debug/net10.0/aspire1.AppHost.dll",
      "args": [],
      "cwd": "${workspaceFolder}/aspire1.AppHost",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Debug WeatherService",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-weatherservice",
      "program": "${workspaceFolder}/aspire1.WeatherService/bin/Debug/net10.0/aspire1.WeatherService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/aspire1.WeatherService",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:7002"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Debug Web (Blazor)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-web",
      "program": "${workspaceFolder}/aspire1.Web/bin/Debug/net10.0/aspire1.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/aspire1.Web",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5188"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "requireExactSource": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Attach to AppHost",
      "type": "coreclr",
      "request": "attach",
      "processName": "aspire1.AppHost"
    },
    {
      "name": "Attach to WeatherService",
      "type": "coreclr",
      "request": "attach",
      "processName": "aspire1.WeatherService"
    },
    {
      "name": "Attach to Web",
      "type": "coreclr",
      "request": "attach",
      "processName": "aspire1.Web"
    }
  ],
  "compounds": [
    {
      "name": "Debug All Services",
      "configurations": ["Debug WeatherService", "Debug Web (Blazor)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Aspire",
        "order": 1
      }
    }
  ]
}
